[Unit]
Description=Feral File Connectd
After=chromium-kiosk.service network.target local-fs.target
Requires=chromium-kiosk.service network.target

[Service]
Type=simple
User=feralfile
Group=feralfile
Environment="DBUS_SESSION_BUS_ADDRESS=unix:path=/run/user/1000/bus"
ExecStartPre=/bin/sleep 1
ExecStart=/usr/bin/feral-connectd
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target 