[Unit]
Description=FeralFile Log Rotation Service
After=network.target

[Service]
Type=oneshot
ExecStart=/home/feralfile/scripts/log-rotation.sh
StandardOutput=append:/home/feralfile/.logs/log-rotation.log
StandardError=append:/home/feralfile/.logs/log-rotation.log

[Install]
WantedBy=multi-user.target