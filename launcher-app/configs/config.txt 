# Force HDMI output even if no display is detected
hdmi_force_hotplug=1

# Enable audio over HDMI
hdmi_drive=2

# Disable overscan to ensure the display uses the full screen area
disable_overscan=1

# Set GPU memory allocation for better graphics performance
gpu_mem=512

# Enable the Full KMS OpenGL driver for better GPU acceleration
dtoverlay=vc4-kms-v3d

# Enable CEC
hdmi_ignore_cec_init=0
hdmi_ignore_cec=0